package StringDeclare;

public class Stringfunctions {
	
	public static void main(String[] args) {
		//concat
		String a="Misal";
		System.out.println(a+" Misal");
		System.out.println(a);
		
		
		String name="Rutuja";
		//charAt prints character at index 2
		System.out.println("CharAt: "+name.charAt(2));
		
		//indexOf prints index of particular character
		System.out.println(name.indexOf("indexOf: "+'t'));
		
		//checks if or compares the string into specified object
		System.out.println("Equals: "+name.equals(name));
		
		System.out.println("Substring: "+name.substring(3));
		
		System.out.println("Substring (start and end elements are printed by given limit): "+name.substring(0, 2));
		
		System.out.println("LowerCase: "+name.toLowerCase());
		
		System.out.println("uppercase: "+name.toUpperCase());
		
		System.out.println("Replace: "+name.replace("a", "K"));
		
		//removes a whitespaces
		System.out.println("Trim: "+name.trim());
		
		System.out.println("Split: "+name.split(name));
		
		//returns the unicode of the char at the specified index
		//you can use like codePointBefore,codePointCount
		System.out.println("codePointAt: "+name.codePointAt(0));
		
		
		//comapres if name string is equal to a string lexicographically
		System.out.println("ComapreTO: "+name.compareTo(a));
		
		//check whethere the string contains a sequence of characters
		System.out.println("Contains: "+name.contains(name));
		
		//check whether the string ends with specified  characters
		System.out.println("endsWith: "+name.endsWith(a));
		
		//returns the formatted string using specifiedlocale format string 
		System.out.println("Formatted: "+name.format(a, args));
		
		System.out.println("Empty: "+name.isEmpty());
		
		System.out.println("getBytes: "+name.getBytes());
		
		System.out.println("getCharacters: "+name.hashCode());
		
		System.out.println("Join: "+name.join(a, args));
		
		
	}

}

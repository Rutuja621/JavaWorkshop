package arraydemo;
import java.util.Scanner;
public class Example5 {
	//limit of an array is given when user enter a number add this number to previous number and print the addition after the enter the number till array limit squentially if user enters unsequential number then exit from the loop
	public static int [] getSum(int [] a) {
		int sum=0;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter a number: ");
		sc.nextInt();
		for(int i=0;i<a.length;i++) {
		sum=+i;
		
		System.out.println(sum);
		
		i++;
		}
		return null;
	}
	
	public static void main(String[] args) {
		int a[]=new int[5];
		int [] summ=Example5.getSum(a);
        
        
	}

}

		// syntax ?? (condition)? if true:if false
	    
	    
	    //logical operator
	    //and-one is false then all statement is false
	    System.out.println("AND");
	    System.out.println((a<b)&(b<c));
	    System.out.println((b>a)&(b>c));
	    System.out.println((c<b)&(b>a));
	    //or-if one is true all true
	    System.out.println("Or");
	    System.out.println((c<b)|(a<b));//false|true=true
	    System.out.println((c<b)||(a<b));
	    System.out.println((c<b)|(b>a));//true|false=true
	    System.out.println((c<b)|(b<a));//false|false=false
	    System.out.println((b>a)|(c>b));//true|true=true
		
	}

}
